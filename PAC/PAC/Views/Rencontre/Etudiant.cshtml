@{
}
@model PAC.Models.RencontreModel
    <div class="containerCalendrier">
        <div class="form-group">
            <label for="nomCours">Nom Du cours</label>
            <input type="text" class="form-control" id="nomCours" value="@Model.cours.nomCours" disabled="disabled">
        </div>
        <div class="form-group">
            <label for="nomCours">Local</label>
            <input type="text" class="form-control" id="nomCours" value="@Model.cours.local" disabled="disabled">
        </div>
        <div class="form-group">
            <label for="nomCours">Heure</label>
            <input type="text" class="form-control" id="nomCours" value="@Model.cours.startTime.ToString("dddd") le @Model.cours.startTime.Day @Model.cours.startTime.ToString("MMMM") / @Model.cours.startTime.Hour h à @Model.cours.endTime.Hour h" disabled="disabled">
        </div>
        <div class="form-group">
            <label for="nomCours">Nom de l'enseignant</label>
            <input type="text" class="form-control" id="nomCours" value="@Model.enseignant.UserName" disabled="disabled">
        </div>
        <div class="form-group">
            <label for="nomCours">Nom de l'étudiant</label>
            <input type="text" class="form-control" id="nomCours" value="@Model.etudiant.UserName" disabled="disabled">
        </div>
        @if (Model.evaluation.disponible == true)
        {
            <button type="button" class="btn-lg btn-secondary evaluation" onclick="window.location.href = '@Url.Action("Index","Evaluation",new{tRencontreId=Model.rencontre.id})';">Consulter Evaluation</button>
        }
        <button type="button" class="btn-lg btn-secondary evaluation" onclick="window.location.href = '@Url.Action("AutoEvaluation","Evaluation",new{tRencontreId=Model.rencontre.id})';">Remplir Auto-Évaluation</button>
    </div>