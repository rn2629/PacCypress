@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Sauvegarder un mot de passe";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>Sauvegarder un mot de passe</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-info">
    Vous n'avez pas de mot de passe/nom d'utilisateur local sur ce site. Ajouter une connexion permet de se connecter avec une connexion externe.
</p>
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Nouveau mot de passe</label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Confirmation du mot de passe</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Sauvegarder le mot de passe</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}